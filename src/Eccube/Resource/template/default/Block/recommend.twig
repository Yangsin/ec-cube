        {% if BestProducts|length > 0 %}
            <div id="item_list">
                <div class="row">
                    {% for BestProduct in BestProducts %}
                        <div class="col-sm-3 col-xs-6">
                            <div class="product_item">
                                <a href="{{ path('product_detail', { productId : BestProduct.Product.id}) }}">
                                    <div class="item_photo">
                                        <img src="{{ app.config.image_save_urlpath }}{{ BestProduct.Product.main_list_image }}">
                                    </div>
                                    <p class="item_comment">{{ BestProduct.comment|nl2br }}</p>
                                    <dl>
                                        <dt class="item_name">{{ BestProduct.Product.name }}</dt>
                                        <dd class="item_price">ï¿¥ {{ BestProduct.Product.price02_inc_tax_min|number_format }}</dd>
                                    </dl> 
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
